#!/usr/bin/env bash
SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P)"

#down the last running theme
if [ -f "/tmp/leftwm-theme-down" ]; then
    /tmp/leftwm-theme-down
    rm /tmp/leftwm-theme-down
fi
ln -s $SCRIPTPATH/down /tmp/leftwm-theme-down

DUNSTDIR=$HOME/.config/dunst

# create the config dir if nonexistant
if [ ! -d "$DUNSTDIR" ]; then
  mkdir -p $DUNSTDIR
fi

DUNSTRCPATH="$DUNSTDIR/dunstrc"

# check if the rc file exists and remove it if it does
if [ -f "$DUNSTRCPATH" ]; then
  rm -f $DUNSTRCPATH
fi

# Copy the template file to the user config directory
cp $SCRIPTPATH/dunstrc.tmpl $DUNSTRCPATH
# hacky workaround to problem with dunst config not being able to read relative paths.
# find the lines to replace with paths
line_nums=($(awk '/<ICON_PATH_PLACEHOLDER>/ {print FNR}' dunstrc.tmpl))

# sort the file names
icon_names=($(ls $SCRIPTPATH/notif-icons | awk '{ print length, $0} ' | sort -n | cut -d" " -f2-))

# iterate and apply each path to each line in the file
for i in "${!line_nums[@]}"; do
  sed -i "${line_nums[$i]}s|.*|    icon = $SCRIPTPATH/notif-icons/${icon_names[$i]}|" $DUNSTRCPATH
done

# kill previous session and start another in a detached shell to prevent dunst taking the shell
bash -c "killall dunst && dunst"

#boot compton or picom if it exists
if [ -x "$(command -v compton)" ]; then
  compton &> /dev/null &
elif [ -x "$(command -v picom)" ]; then
  picom &> /dev/null &
fi

#set background
if [ -x "$(command -v feh)" ]; then
  feh --bg-fill "$SCRIPTPATH"/background.png
fi

#set the theme.toml config
echo "LoadTheme $SCRIPTPATH/theme.toml" > $XDG_RUNTIME_DIR/leftwm/commands.pipe

#boot polybar based on the number of monitors found
if [ -x "$(command -v polybar)" ]; then
  pkill polybar
  monitors="$(polybar -m | sed s/:.*// | tac)"
  while read -r display; do
    MONITOR=$display polybar -c "$SCRIPTPATH/polybar.config" mainbar &> /dev/null &
  done <<< "$monitors"
  exit 0
fi
