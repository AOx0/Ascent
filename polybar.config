[colors]
bg = #2e3440
fg = #e5e9f0

# polar night
pn-darker = #3b4252
pn-light = #4c566a

# snow storm
sn-dark = #d8dee9
sn-light = #eceff4

# frost
f-mint = #8fbcbb
f-bright = #88c0d0
f-washed = #81a1c1

# aurora
a-green = #a3be8c
a-magenta = #b48ead
a-orange = #d08770

[bar/mainbar]
monitor = ${env:MONITOR}
width = 100%
height = 20
background = ${colors.bg}
foreground = ${colors.fg}
font-0 = Fira Code:size=10;1
font-1 = Fira Code SemiBold:size=10;1
separator = "|"
separator-foreground = ${colors.pn-light}
modules-left = ewmh xwindow
modules-center =
modules-right = volume cpu date time

[module/xwindow]
type = internal/xwindow
label = " %title:0:100:...%"

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-background = ${colors.f-bright}
label-active-foreground = ${colors.pn-darker}
label-occupied = " %name% "
label-occupied-background = ${colors.pn-light}
label-urgent = " %name% "
label-urgent-background = ${colors.a-orange}
label-urgent-foreground = ${colors.win-urgent-fg}
label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

label-active-font = 2
label-occupied-font = 2
label-urgent-font = 2
label-empty-font = 2

[module/date]
type = internal/date
date = " %b %d, %Y "
format-foreground = ${colors.a-magenta}

[module/time]
type = internal/date
date = " %I:%M %p "
format-font = 2

[module/cpu]
type = internal/cpu
interval = 0.5
label = " CPU: %percentage:2%% "
label-foreground = ${colors.f-bright}

[module/volume]
type = internal/pulseaudio
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
label-volume = " VOL: %percentage:2%% "
label-volume-foreground = ${colors.f-mint}
